{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },

    "RoundTheCodeFile": {
      "Options": {
        "FolderPath": "d:\\Zlogs",
        "FilePath": "log_{date}.log"
      }
    },

    "Console": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Information",
        "RoundTheCode.HostedServices.Web.Controllers": "Trace"
      }
    }
  },

  "AllowedHosts": "*"
}
